<% include ./partials/header %>
 
<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(bloger => { %>
                <div class="item">
                    <div class="image">
                        <img src="<%= bloger.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= bloger._id %>"><%= bloger.title %></a>
                        <div class="meta">
                            <span><%= bloger.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- bloger.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= bloger._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>

                        </div>
                    </div>
                    
                </div>
            
            <% }) %>
        </div>
    </div>
</div>


<% include ./partials/footer %>
